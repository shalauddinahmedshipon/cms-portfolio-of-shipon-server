model Profile {
  id String @id @default("main-profile")
  name         String?
  designation  String?
  headline     String?
  bio          String?
  avatarUrl    String?
  resumeUrl    String?
  bannerUrl    String?
  bannerType   BannerType? 
  location     String?
  contactInfo  ContactInfo?
  codingProfile  CodingProfile[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum BannerType {
  IMAGE
  VIDEO
}


model ContactInfo {
  id        String  @id @default(uuid())

  email     String?
  github    String?
  linkedin  String?
  facebook  String?
  whatsapp  String?
  twitter   String?

  profileId String  @unique
  profile   Profile @relation(fields: [profileId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model CodingProfile {
  id          String   @id @default(uuid())

  platform    String   // "Codeforces", "CodeChef", "LeetCode"
  username    String
  profileUrl  String?
  iconUrl     String?  // uploaded platform icon (SVG/PNG)

  rating      Int?
  badge       String?  // "Expert", "3 Star"
  highlight   Boolean  @default(false)
  order       Int      @default(0)

  profileId   String
  profile     Profile  @relation(fields: [profileId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

