model Profile {
  id String @id @default("main-profile")
  name         String?
  designation  String?
  headline     String?
  bio          String?
  avatarUrl    String?
  resumeUrl    String?
  bannerUrl    String?
  location     String?
  contactInfo  ContactInfo?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}


model ContactInfo {
  id        String  @id @default(uuid())

  email     String?
  github    String?
  linkedin  String?
  facebook  String?
  whatsapp  String?
  twitter   String?

  profileId String  @unique
  profile   Profile @relation(fields: [profileId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}