model Event {
  id          String   @id @default(uuid())
  name        String
  title       String
  description String
  location    String
  eventDate   DateTime
  eventType   EventType
  serialNo    Int?  @unique
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  images      String[]
}

enum EventType {
  CONFERENCE
  WORKSHOP
  MEETUP
  WEBINAR
  CONTEST
  HACKATHON
}
