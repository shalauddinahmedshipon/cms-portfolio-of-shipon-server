model Blog {
  id            String   @id @default(uuid())
  title         String
  serialNo      Int     @unique
  content       String   
  coverImage    String?
  category      BlogCategory
  tags          String[] // ['nestjs', 'backend', 'api']
  isActive      Boolean  @default(true)
  isFeatured    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Optional: Enums for category
enum BlogCategory {
  TECHNOLOGY
  PROGRAMMING
  LIFESTYLE
  TUTORIAL
  NEWS
}
