model SkillCategory {
  id        String   @id @default(uuid())
  name      String
  order     Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  skills    Skill[]
}

model Skill {
  id          String   @id @default(uuid())
  name        String
  icon        String
  order       Int      
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  categoryId  String
  category    SkillCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}
